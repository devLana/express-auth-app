{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "quotes": 0,
    "no-unused-vars": 1,
    "linebreak-style": [1, "windows"],
    "no-console": 0,
    "arrow-parens": [1, "as-needed"],
    "consistent-return": 1,
    "arrow-body-style": 0,
    "semi": 1,
    "indent": [1, 2],
    "object-curly-newline": 0,
    "operator-linebreak": 0,
    "comma-dangle": 0
  }
}
